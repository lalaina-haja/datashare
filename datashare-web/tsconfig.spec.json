{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./out-tsc/spec",
        "types": [
            "vitest",
            "vite/client",
            "node",
            "jsdom"
        ],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true
    },
    "include": [
        "src/test/**/*.ts",
        "src/test/unit/**/*.ts",
        "src/test/integration/**/*.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.d.ts"
    ],
    "files": [
        "config/vitest.setup.ts"
    ]
}