{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "src/main.ts",
  ],
  "include": [
    "src/**/*.ts",
    "config/**/*.ts",
  ],
  "exclude": [
    "src/test/**/*.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
  ]
}